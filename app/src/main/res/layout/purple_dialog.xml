<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <RelativeLayout
        android:id="@+id/purpleDlg"
        android:layout_width="300dp"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:background="@drawable/purple_dlg_bg"
        android:padding="5dp" >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="verdana"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:padding="15dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/confirmDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purpleDlg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-36dp"
        android:visibility="gone"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/noBtn"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_dlg_no" />

        <Button
            android:id="@+id/yesBtn"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:background="@drawable/button_dlg_yes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/askRateDlg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purpleDlg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/rateBtn"
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_dlg_rate" />

        <Button
            android:id="@+id/laterBtn"
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:background="@drawable/button_dlg_later" />
    </LinearLayout>
    


</RelativeLayout>